    "version": "0.2.0",
    "configurations": [
        {
            "name": "BaasWebApp Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "BaasWebApp Remote Production",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--settings=baaswebapp.remote_prod"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Import reports",
            "type": "python",
            "request": "launch",
            "module": "trialapp.report_finder",
            "justMyCode": true,
        }
    ]
}